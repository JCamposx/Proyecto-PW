<html>
    <head>
      <title>Historial de Apuestas</title>
      <meta charset="utf-8"/>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <div>
          <%- include('cliente_menu') %>
          <h2>Historial de Apuestas</h2>
        </div>
        <table class="table table-hover">
            <thead>
              <tr>
                <!--<th scope="col">Id</th>-->
                <th scope="col">Fecha</th>
                <th scope="col">Hora</th>
                <th scope="col">NÃºmero</th>
                <th scope="col">Equipo A</th>
                <th scope="col">Equipo B</th>
                <th scope="col">Categoria</th>
                <th scope="col">Juego</th>
                <th scope="col">Equipo Apostado</th>
                <th scope="col">Estado</th>
                <th scope="col">Monto Apostado</th>
                <!--<th scope="col">Factor</th>-->
                <th scope="col">Resultado</th>
              </tr>
            </thead>
            <tbody>
              <% apuestas.forEach( apuesta => {%>
                <tr>
                  <th scope="row"><%= apuesta.id %></th>
                  <td><%=apuesta.fecha %></td>
                  <td><%=apuesta.hora %></td>
                  <td><%=apuesta.numero %></td>
                  <td><%=apuesta.equipoa %></td>
                  <td><%=apuesta.equipob %></td>
                  <td><%=apuesta.categoria %></td>
                  <td><%=apuesta.juego %></td>
                  <td><%=apuesta.equipoapostado %></td>
                  <td><%=apuesta.estado %></td>
                  <td><%=apuesta.monto %></td>
                  <td><%=apuesta.factor %></td>
                  <td><%= (apuesta.monto)*(apuesta.factor) %></td>
                </tr>
                <%  });%>
            </tbody>
          </table>
    </body>
</html>