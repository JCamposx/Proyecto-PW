<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Document</title>
		<link rel="stylesheet" href="/css/index.css">
		<script src="/js/partidas.js"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>
	
	<body>
		<!-- Barra de navegación -->
		<%- include('navbar') %>

		<!-- Contenido -->
		<div class="container">
			<div class="mb-3">
				<h1>Editar partida N°<%= partida.id %></h1>
			</div>

			<form method="post" action="/partidas/editar/<%= partida.id %>%>">
				<div class="row mb-4">
					<div class="col-4">
						<h4>Categoría</h4>
					</div>

					<div class="col-8 row">
						<div class="col-8">
							<select name="categoria" id="categoria" class="form-select" disabled>
								<option value="<%= categoria.id %>" selected><%= categoria.nombre_cat %></option>
							</select>
						</div>

						<div class="col centered">
							<a href="/partidas/editar/<%= partida.id %>/categoria/<%= categoria.id %>" class="btn btn-dark">Editar</a>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Juego</h4>
					</div>

					<div class="col-8 row">
						<div class="col-8">
							<select name="juego" id="juego" class="form-select" disabled>
								<option value="<%= juego.id %>" selected><%= juego.nombre_jue %></option>
							</select>
						</div>

						<div class="col centered">
							<a href="/partidas/editar/<%= partida.id %>/categoria/<%= categoria.id %>/juego/<%= juego.id %>" class="btn btn-dark">Editar</a>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Equipos</h4>
					</div>

					<div class="col-8 row">
						<div class="col-5">
							<select name="local" id="local" class="form-select" required>
								<option id="local_dis" value="-1" disabled>--- Equipo local ---</option>
								<% equipos_en_juego.forEach(ej => { %>
									<% if (ej.id == partida.id_local) { %>
										<option value="<%= ej.id %>" selected><%= ej.nombre %></option>
									<% } else { %>
										<option value="<%= ej.id %>"><%= ej.nombre %></option>
									<% } %>
								<% }) %>
							</select>
						</div>

						<div class="col-2 text-center centered">
							<h5>vs</h5>
						</div>

						<div class="col-5">
							<select name="visitante" id="visitante" class="form-select" required>
								<option id="visitante_dis" value="-1" disabled>--- Equipo visitante ---</option>
								<% equipos_en_juego.forEach(ej => { %>
									<% if (ej.id == partida.id_visita) { %>
										<option value="<%= ej.id %>" selected><%= ej.nombre %></option>
									<% } else { %>
										<option value="<%= ej.id %>"><%= ej.nombre %></option>
									<% } %>
								<% }) %>
							</select>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Factores</h4>
					</div>

					<div class="col-8 row">
						<div class="col-4">
							<input name="f_local" value="<%= partida.factor_local %>" type="number" min="0.1" step="0.1" class="form-control" placeholder="Factor local" required/>
						</div>
						<div class="col-4">
							<input name="f_empate" value="<%= partida.factor_empate %>" type="number" min="0.1" step="0.1" class="form-control" placeholder="Factor empate" required/>
						</div>
						<div class="col-4">
							<input name="f_visitante" value="<%= partida.factor_visita %>" type="number" min="0.1" step="0.1" class="form-control" placeholder="Factor visitante" required/>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Fecha</h4>
					</div>

					<div class="col-8">
						<input name="fecha" value="<%= partida.fecha.toISOString().substring(0,10) %>" type="date" class="form-control" required/>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Hora de inicio</h4>
					</div>

					<div class="col-8 row">
						<div class="col-4">
							<input name="hora" value=<%= parseInt(partida.hora_inicio.substring(0,2)) %>  type="number" min="0" max="23" class="form-control" placeholder="Hora" required/>
						</div>

						<div class="col-1 text-center centered">
							<h5>:</h5>
						</div>

						<div class="col-4">
							<input name="minutos" value=<%= parseInt(partida.hora_inicio.substring(3,5)) %> type="number" min="0" max="59" class="form-control" placeholder="Minutos" required/>
						</div>

						<div class="col-2 centered">
							<label>horas</label>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Duración</h4>
					</div>

					<div class="col-8 row">
						<div class="col-4">
							<input name="duracion" value=<%= parseInt(partida.duracion) %> type="number" min="0" class="form-control" placeholder="Duración" required/>
						</div>

						<div class="col-2 centered">
							<label>minutos</label>
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Estado</h4>
					</div>

					<div class="col-8">
						<select name="estado" id="estado" class="form-select" required>
							<option id="estado_dis" value="-1" selected>--- Estado ---</option>
							<% if (partida.estado == 0) { %>
								<option value="0" selected>Pendiente</option>
								<option value="1">Iniciado</option>
								<option value="2">Finalizado</option>
							<% } else if (partida.estado == 1) { %>
								<option value="0">Pendiente</option>
								<option value="1" selected>Iniciado</option>
								<option value="2">Finalizado</option>
							<% } else { %>
								<option value="0">Pendiente</option>
								<option value="1">Iniciado</option>
								<option value="2" selected>Finalizado</option>
							<% } %>
						</select>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-4">
						<h4>Resultado</h4>
					</div>

					<div class="col-8">
						<select name="resultado" id="resultado" class="form-select" required>
							<option id="resultado_dis" value="-1" selected>--- Resultado ---</option>
							<% if (partida.resultado == 0) { %>
								<option value="0" selected>Pendiente</option>
								<option value="1">Victoria local</option>
								<option value="2">Empate</option>
								<option value="3">Victoria visitante</option>
							<% } else if (partida.resultado == 1) { %>
								<option value="0">Pendiente</option>
								<option value="1" selected>Victoria local</option>
								<option value="2">Empate</option>
								<option value="3">Victoria visitante</option>
							<% } else if (partida.resultado == 2) { %>
								<option value="0">Pendiente</option>
								<option value="1">Victoria local</option>
								<option value="2" selected>Empate</option>
								<option value="3">Victoria visitante</option>
							<% } else { %>
								<option value="0">Pendiente</option>
								<option value="1">Victoria local</option>
								<option value="2">Empate</option>
								<option value="3" selected>Victoria visitante</option>
							<% } %>
						</select>
					</div>
				</div>

				<div class="row mb-3 text-center">
					<div class="col">
						<button id="submit" type="submit" class="btn btn-success">Confirmar</button>

						<a href="/partidas" class="btn btn-outline-secondary ms-3">Regresar</a>
					</div>
				</div>
			</form>
		</div>

		<!-- Footer -->
		<div class="fixed-bottom">
			<%- include('footer') %>
		</div>
	</body>
</html>