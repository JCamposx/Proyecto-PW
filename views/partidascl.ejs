<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Lista de Partidas - Cliente</title>
		<link rel="stylesheet" href="/css/index.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>
	
	<body>
		<!-- Barra de navegación -->
		<%- include('cliente_menu') %>

		<!-- Contenido -->
		<div class="container">
			<h2>Lista de Partidas</h2>
			<table class="table table-hover">
				<thead>
					<td>Id</td>
					<td>Partida</td>
					<td>Fecha</td>
					<td>Hora</td>
					<td>Duración</td>
					<td>Factor Local</td>
					<td>Factor Empate</td>
					<td>Factor Visita</td>
					<td>Opción a Apostar</td>
				</thead>
				<tbody>
					<% partidas.forEach((partidas) => { %>
						<tr>
							<th scope="row"><%= partidas.id_local %></th>
							<td><%= partidas.id_local %> vs <%= partidas.id_visita %> </td>
							<td><%= partidas.fecha.toLocaleDateString('es-PEss') %></td>
							<td><%= partidas.hora_inicio %></td>
							<td><%= partidas.duracion %></td>
							<td><%= partidas.factor_local %></td>
							<td><%= partidas.factor_empate %></td>
							<td><%= partidas.factor_visita %></td>
							<td>
								<select class="form-select form-select-sm" aria-label=".form-select-sm example">
									<option selected>select menu</option>
 										<option value="1">Factor Local</option>
										<option value="2">Factor Empate</option>
										<option value="3">Factor Visita</option>
								</select>
							</td>
						</tr>
					<% })%>
				</tbody>
			</table>	
		</div>

		<!-- Footer -->
		<%- include('footer') %>
	</body>
</html>